<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CalendarView" >

        <attr name="sections" format="integer"/>
        <attr name="dividerColor" format="color|reference"/>
        <attr name="hourDividers" format="boolean"/>

        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

    </declare-styleable>

    <style name="circular">
        <item name="cornerSize"> 50% </item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>